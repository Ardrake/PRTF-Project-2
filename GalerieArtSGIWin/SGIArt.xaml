<Window x:Class="GalerieArtSGIWin.SGIArt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalerieArtSGIWin"
        mc:Ignorable="d"
        Title="Système de Galerie Informatisé (SGI)" Height="558.237" Width="790.004">
    <Grid>
        <Button x:Name="Quitter" Content="Quitter" Margin="0,0,10,10" Click="Quitter_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <TabControl x:Name="tabControl" Margin="10,10,10,50">
            <TabItem Header="Conservateurs" Height="23" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-1">
                    <DataGrid x:Name="dataGridConservateur" Margin="10,103,278,10" Grid.RowSpan="2"/>
                    <Label x:Name="labelConservateurPrenom" Content="Prénom:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" ToolTip="Alphanumérique (Maximum 60 char)"/>
                    <TextBox x:Name="textBoxConservateurPrenom" HorizontalAlignment="Left" Height="23" Margin="69,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" TabIndex="1" TextChanged="textBox_TextChanged"/>
                    <Label x:Name="labelConservateurID" Content="ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Cursor="" ToolTip="Alphanumérique (5 char de long)" RenderTransformOrigin="1.227,0.615"/>
                    <TextBox x:Name="textBoxConservateurID" HorizontalAlignment="Left" Height="23" Margin="32,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" TabIndex="0"/>
                    <Label x:Name="labelConservateurNom" Content="Nom:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" ToolTip="Alphanumérique (Maximum 60 char)" RenderTransformOrigin="1,0.538"/>
                    <TextBox x:Name="textBoxConservateurNom" HorizontalAlignment="Left" Height="23" Margin="69,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" TabIndex="2" TextChanged="textBox_TextChanged"/>
                    <Label x:Name="labelCommission" Content="Commission:" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBoxCommission" HorizontalAlignment="Left" Height="23" Margin="174,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
                    <Image x:Name="image1" HorizontalAlignment="Left" Height="414" Margin="479,10,0,0" VerticalAlignment="Top" Width="263" Source="papillon.png" Grid.RowSpan="2"/>
                    <Button x:Name="buttonAjouterConservateur" Content="Ajouter" HorizontalAlignment="Left" Margin="331,10,0,0" VerticalAlignment="Top" Width="140" Height="35" TabIndex="3" Click="buttonAjouterConservateur_Click"/>
                    <Button x:Name="buttonSupprimerConservateur" Content="Suprrimer" HorizontalAlignment="Left" Margin="331,60,0,0" VerticalAlignment="Top" Width="140" Height="35"/>
                </Grid>
            </TabItem>
            <TabItem Header="Artistes">
                <Grid Background="#FFE5E5E5">

                    <DataGrid x:Name="dataGridArtiste" Margin="10,100,278,9"/>
                    <Label x:Name="labelArtistePrenom" Content="Prénom:" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" ToolTip="Alphanumérique (Maximum 60 char)" Height="26" Width="54"/>
                    <TextBox x:Name="textBoxArtistePrenom" HorizontalAlignment="Left" Height="23" Margin="69,38,0,0" TextWrapping="Wrap" TabIndex="2" VerticalAlignment="Top" Width="257 
                             " TextChanged="textBox_TextChanged"/>
                    <Label x:Name="labelArtisteID" Content="ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Cursor="" ToolTip="Alphanumérique (5 char de long)" Height="26" Width="22"/>
                    <TextBox x:Name="textBoxArtisteID" HorizontalAlignment="Left" Height="23" Margin="32,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TabIndex="0"/>
                    <Label x:Name="labelArtisteNom" Content="Nom:" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" ToolTip="Alphanumérique (Maximum 60 char)" RenderTransformOrigin="1,0.538" Height="26" Width="39"/>
                    <TextBox x:Name="textBoxArtisteNom" HorizontalAlignment="Left" Height="23" Margin="69,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" TabIndex="3" TextChanged="textBox_TextChanged"/>
                    <Image x:Name="image1_Copy" HorizontalAlignment="Left" Height="414" Margin="479,10,0,0" VerticalAlignment="Top" Width="263" Source="papillon.png"/>
                    <Label x:Name="label" Content="Conservateur:" HorizontalAlignment="Left" Margin="77,10,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="comboBoxArtiste" HorizontalAlignment="Left" Margin="164,10,0,0" VerticalAlignment="Top" Width="166" TabIndex="1"/>
                    <Button x:Name="buttonAjouterArtiste" Content="Ajouter" HorizontalAlignment="Left" Margin="331,10,0,0" VerticalAlignment="Top" Width="140" Height="35" TabIndex="4" Click="buttonAjouterArtiste_Click"/>
                    <Button x:Name="buttonSupprimerArtiste" Content="Suprrimer" HorizontalAlignment="Left" Margin="331,60,0,0" VerticalAlignment="Top" Width="140" Height="35"/>
                </Grid>
            </TabItem>
            <TabItem Header="Oeuvres">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="DataGridOeuvre" Margin="10,250,124,10"/>
                    <Image x:Name="image" HorizontalAlignment="Left" Height="173" Margin="633,250,0,0" VerticalAlignment="Top" Width="109" Source="papillon.png" Opacity="0.25"/>
                    <Label x:Name="labeOeuvreTitre" Content="Titre:" HorizontalAlignment="Left" Margin="168,10,0,0" VerticalAlignment="Top" ToolTip="Alphanumérique (Maximum 60 char)"/>
                    <TextBox x:Name="textBoxOeuvreTitre" HorizontalAlignment="Left" Height="23" Margin="209,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" TextChanged="textBox_TextChanged"/>
                    <Label x:Name="labelOeuvreID" Content="ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Cursor="" ToolTip="Alphanumérique (5 char de long)"/>
                    <TextBox x:Name="textBoxOeuvreID" HorizontalAlignment="Left" Height="23" Margin="32,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
